<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/button" android:endColor="@color/button" android:angle="10.0" android:type="linear" />
            <corners android:radius="10.0dip" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/background" android:endColor="@color/button" android:angle="10.0" android:type="linear" />
            <corners android:radius="10.0dip" />
        </shape>
    </item>
</selector>